@model CattleystWebPortal.ViewModels.Cattles.CattleModalViewModel
<div class="modal-header visually-hidden">
    <h2 class="modal-title">
        Cattle
    </h2>
</div>

@using (Html.BeginForm("ModalSave", "Cattle", FormMethod.Post, new { @id = "frm-cattle-modal", data_parsley_validate = "parsley" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()        
        <div class="mb-3">
            @Html.LabelFor(x => x.LocationId, "Location", new { @for = "ddl-location" })
            <div>
                @Html.DropDownListFor(x => x.LocationId, Model.LocationListItems, "", new { @id = "ddl-location", @class = "form-select", data_parsley_required = "true" })
            </div>
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.CattleTypeCode, "Cattle Type", new { @for = "ddl-cattletype" })
            <div>
                @Html.DropDownListFor(x => x.CattleTypeCode, Model.CattleTypeListItems, "", new { @id = "ddl-cattletype", @class = "form-select", data_parsley_required = "true" })
            </div>
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.Birthdate, "Birthdate", new { @for = "txt-birthdate" })
            <div>
                @Html.TextBoxFor(x => x.Birthdate, "{0:yyyy-MM-dd}", new { @id = "txt-birthdate", @type = "date", @class = "form-control", data_parsley_required = "true" })
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

<script>
    'use strict';
    (() => {
        const $frm = $('#frm-cattle-modal');
        $frm
            .on('submit', function(e) {
                e.preventDefault();
                const validated = $frm.parsley().validate();
                if (validated) {
                    $.ajax({
                        url: $frm[0].action,
                        type: 'POST',
                        headers: { 'Idempotency-Key' : app.generateUUID() },
                        data: $frm.serialize(),
                        success: function(response) {
                            if (response === 'OK') {
                            toastr.success('Cattle saved.');
                            $frm.closest('div.modal').modal('hide');
                            cattle.loadTable();
                        }
                        },
                        fail: function(xhr, textStatus, error) {
                            console.error(error);
                        }
                    });
                }
            });
    })();
</script>