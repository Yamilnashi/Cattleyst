@model CattleystWebPortal.ViewModels.Locations.LocationModalViewModel

<div class="modal-header visually-hidden">
    <h2 class="modal-title">
        @if (Model.LocationId == null)
        {
            @:Add New Location
        } else
        {
            @:Edit Location
        }
    </h2>
</div>

@using(Html.BeginForm("ModalSave", "Location", FormMethod.Post, new { @id = "frm-location", data_parsley_validate = "parsley" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.LocationId)
    <div class="modal-body">
        <div class="mb-3">
            @Html.LabelFor(x => x.LocationName, "Location", new { @for = "txt-location" })
            <div>
                @Html.TextBoxFor(x => x.LocationName, new { @id = "txt-location", @class = "form-control", data_parsley_required = "true" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div> 
}

<script>
    'use strict';
    (() => {
        const $frm = $('#frm-location');
        $frm
            .on('submit', function(e) {
                e.preventDefault();
                const validated = $frm.parsley().validate();
                if (validated) {
                    $.post($frm[0].action, $frm.serialize(), function(response) {
                        if (response === 'OK') {
                            toastr.success('Location saved.');
                            $frm.closest('div.modal').modal('hide');
                            locations.loadTable();
                        }
                    });
                }
            });
    })();
</script>